# ========================================
# DATABASE CONFIGURATION
# ========================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_DB=contacts_db

# URL de conexi贸n a PostgreSQL
# Formato: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://admin:admin123@postgres:5432/contacts_db

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=3000
NODE_ENV=development

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================

# AUTH_REQUIRED: Controla si los endpoints CRUD requieren autenticaci贸n
# - false: Los endpoints funcionan SIN token (ideal para desarrollo/alumnos principiantes)
# - true: Los endpoints REQUIEREN token JWT (modo producci贸n/alumnos avanzados)
AUTH_REQUIRED=false

# JWT Secret: Clave secreta para firmar tokens (cambiar en producci贸n)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please

# JWT Expiration: Tiempo de validez del token (ejemplos: 1h, 24h, 7d, 30d)
JWT_EXPIRES_IN=24h

# ========================================
# PGADMIN CONFIGURATION
# ========================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=Admin.123456
